<div class="row">   
    <div class="col-3">
        <%= render 'sidebar' %>
    </div>
    <div class="col-9">
        <div class="card mt-4">
            <div class="card-header text-white">
                Description
            </div>
            <div class= "card-body">
                <div class = "container">
                    <%= form_for :room, url: ""  do |f| %>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <%= f.label :listing_name %> <br>
                                    <%= f.text_field :listing_name, placeholder: "What is your listing name" %>
                                </div>
                                <div class="form-group">
                                    <%= f.label :summary %> <br>
                                    <%= f.text_area :summary, rows: 5, cols: 2, autofocus: true, placeholder: "Summary of your house", class: "form-control" %>
                                </div>
                                 <div class="action-content mt-4">
                                    <%= link_to "Save", "#" , class: "btn btn-info" %>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>