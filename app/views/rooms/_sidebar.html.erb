<div class="mt-4 card">
    <div class="card-body">
        <ul class="sidebar-list">
            <li class="sidebar-item">
                <%= link_to "Listing", listing_room_path, class: "sidebar-link active" %>
                <span class="float-right"><i class="fa fa-check"></i></span>
            </li>
            <li class="sidebar-item">
                <%= link_to "Pricing", price_room_path, class: "sidebar-link active" %>
                <% if @room.price %>
                    <span class="float-right"><i class="fa fa-check"></i></span>
                <% end%>
            </li>
            <li class="sidebar-item">
                <%= link_to "Description", description_room_path, class: "sidebar-link active" %>
                <% if @room.listing_name %>
                    <span class="float-right"><i class="fa fa-check"></i></span>
                <% end%>
            </li>
            <li class="sidebar-item">
                <%= link_to "Photos", "#", class: "sidebar-link active" %>
            </li>
            <li class="sidebar-item">
                <%= link_to "Amenities", amenities_room_path, class: "sidebar-link active" %>
                <span class="float-right"><i class="fa fa-check"></i></span>
            </li>
            <li class="sidebar-item">
                <%= link_to "Location", location_room_path, class: "sidebar-link active" %>
                <span class="pull-right">
                <% if @room.address %>
                    <span class="float-right"><i class="fa fa-check"></i></span>
                <% end%>
            </li>
        </ul><hr>
        <div class="action-sidebar">     
            <%= link_to "Publish", "#", class: "btn btn-info" %>
        </div>
    </div>
</div>