<div class="row">   
    <div class="col-3">
        <%= render 'sidebar' %>
    </div>
    <div class="col-9">
        <div class="card mt-4">
            <div class="card-header text-white">
                Location 
            </div>
            <div class="card-body">
                <div class = "container">
                    <%= form_for @room do |f| %>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <%= f.label :address %> <br>
                                    <%= f.text_field :address %> 
                                </div>
                                <div class="action-content mt-4">
                                    <%= f.submit "Save", class:  "btn btn-info text-white"%>
                                </div>
                            </div>
                        </div>
                    <% end %>                      
                </div>
            </div>
        </div>
    </div>
</div>